{
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "module": "esnext",
    "sourceMap": true,
    "outDir": "dist/esm",
    "strict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "jsx": "react",
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"]
}
